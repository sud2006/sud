//sayının teklik çiftlik durumuna bakınız.

#include <stdio.h>

int main()
{
    int a;
    
    printf("bir sayı giriniz:\n");
    scanf("%d",&a);
    
    if(a%2==0)
    {
        printf("%d çift sayı",a);
    }
    else if((a%2)!=0)
    {
        printf("%d tek sayı",a);
    }
    return 0;
    
}
